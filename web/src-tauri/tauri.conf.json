{
  "$schema": "../node_modules/@tauri-apps/cli/schema.json",
  "productName": "TaskRiot",
  "version": "1.0.0",
  "identifier": "com.taskriot.desktop",
  "build": {
    "beforeBuildCommand": "npm run build:desktop",
    "beforeDevCommand": "PORT=3005 npm run dev",
    "devUrl": "http://localhost:3005",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "TaskRiot",
        "width": 1200,
        "height": 800,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "category": "Productivity",
    "icon": [
      "../public/icons/project.png"
    ],
    "targets": [
      "app"
    ],
    "macOS": {
      "entitlements": null,
      "exceptionDomain": "",
      "frameworks": [],
      "providerShortName": null,
      "signingIdentity": null
    },
    "windows": {
      "digestAlgorithm": "sha256",
      "timestampUrl": ""
    },
    "resources": [
      "../service-dist/**/*",
      "../node"
    ],
    "externalBin": []
  }
}